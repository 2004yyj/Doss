<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="ks.hs.dgsw.domain.entity.Account"/>
        <variable
            name="account"
            type="Account" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultPadding"
        android:paddingVertical="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_bank_image_account_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/toss_dark_color"
                android:contentDescription="@string/bank_logo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_account_user"
            style="@style/TextViewRegularMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{account.name}"
            tools:text="양윤재" />

        <TextView
            android:id="@+id/tv_bank_name_account_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_account_user"
            android:text="@{account.bankName}"
            tools:text="대구은행" />

        <TextView
            android:id="@+id/tv_account_number_account_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_bank_name_account_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:text="@{account.accountNumber}"
            tools:text="205123410202" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>