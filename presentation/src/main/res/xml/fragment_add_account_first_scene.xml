<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/tv_title_add_account" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/showSecurityNumsLayout" >
        <Constraint
            android:id="@+id/til_phone_register"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_social_security_number_add_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_next_add_account_first"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/linear_layout_social_security_number_add_account"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/til_name_add_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="visible" />
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/showSecurityNumsLayout" />
    <ConstraintSet android:id="@+id/showPhoneNumberLayout" >
        <Constraint
            android:id="@+id/til_phone_register"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_social_security_number_add_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btn_next_add_account_first"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone" />
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/showSecurityNumsLayout"
        app:constraintSetEnd="@+id/showPhoneNumberLayout" />
    <Transition
        app:constraintSetStart="@+id/showPhoneNumberLayout"
        app:constraintSetEnd="@+id/end" />
    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:id="@+id/linear_layout_social_security_number_add_account"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/til_name_add_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/til_phone_register"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_social_security_number_add_account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_next_add_account_first"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone" />
    </ConstraintSet>
</MotionScene>
